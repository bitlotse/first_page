<section id="contact" class="contact-section contact-page-section">
  <div class="container">
    <h2 class="text-center contact-page-main-title section-title-with-rule-above">Kontaktieren Sie uns</h2>

    <div class="contact-page-actions">
      <div class="contact-page-icons">
        <a href="tel:{{ site.contact.phoneLink }}" title="Anrufen">
          <img src="/img/icons/phone.svg" alt="Telefon Icon">
        </a>
        <a href="mailto:{{ site.contact.email }}" title="E-Mail schreiben">
          <img src="/img/icons/mail.svg" alt="E-Mail Icon">
        </a>
        <a href="https://wa.me/{{ site.contact.whatsappLink }}" target="_blank" rel="noopener noreferrer" title="WhatsApp Nachricht">
          <img src="/img/icons/whatsapp.svg" alt="WhatsApp Icon">
        </a>
      </div>
    </div>

    <div class="contact-page-cards-layout">
      <div class="contact-page-content-card">
        <h3>Ihr Friseursalon in Traunstein</h3>
        <div class="contact-info">
          <p>Adresse:<br>
            <span>{{ site.contact.address.street | default("Maximilianstraße 35") }}</span><br>
            <span>{{ site.contact.address.zip | default("83278") }}</span> <span>{{ site.contact.address.city | default("Traunstein") }}</span>
          </p>
          <p>Telefon:<br><a href="tel:{{ site.contact.phoneLink }}">{{ site.contact.phone }}</a></p>
          <p>E-Mail:<br><a href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a></p>
          {% if site.contact.whatsapp and site.contact.whatsappLink %}
          <p>WhatsApp:<br><a href="https://wa.me/{{ site.contact.whatsappLink }}" target="_blank" rel="noopener noreferrer">{{ site.contact.whatsapp }}</a></p>
          {% endif %}
          
          <p class="contact-info-group-heading">Öffnungszeiten:</p>
          <ul class="opening-hours-list">
            {% for item in site.contact.openingHours %}
            <li>{{ item.days }}: {{ item.hours }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <div class="contact-page-map-card">
        <h3>Unser Standort in Traunstein</h3>
        <iframe
          class="contact-map-iframe"
          src="{{ site.contact.mapEmbedUrl | default('https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.991625996979!2d2.292292615674068!3d48.85837007928746!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e29641f06e1%3A0x874970e33c155285!2sEiffel%20Tower!5e0!3m2!1sen!2sfr!4v1615000000000!5m2!1sen!2sfr') }}"
          allowfullscreen="" loading="lazy"
          title="Google Maps Standort Haarmanufaktur Suszan Traunstein"></iframe>
        <a href="https://www.google.com/maps/dir/?api=1&destination={{ site.contact.address.street | urlencode }},{{ site.contact.address.zip | urlencode }}+{{ site.contact.address.city | urlencode }}" target="_blank" rel="noopener noreferrer" class="btn map-navigation-button">Route planen</a>
      </div>
    </div>
  </div>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "{{ site.contact.schemaType | default('LocalBusiness') }}",
    "name": "{{ site.name }}",
    "url": "{{ site.url }}{{ page.url | url }}",
    {% if site.logo_path %}
    "logo": "{{ site.url }}{{ site.logo_path | url }}",
    "image": "{{ site.url }}{{ site.logo_path | url }}",
    {% endif %}
    "telephone": "{{ site.contact.phoneLink }}",
    "email": "{{ site.contact.email }}",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "{{ site.contact.address.street }}",
      "addressLocality": "{{ site.contact.address.city }}",
      "postalCode": "{{ site.contact.address.zip }}",
      {% if site.contact.address.country %}"addressCountry": "{{ site.contact.address.country }}"{% endif %}
    },
    {% if site.contact.geo %}
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "{{ site.contact.geo.latitude }}",
      "longitude": "{{ site.contact.geo.longitude }}"
    },
    {% endif %}
    {% if site.contact.openingHoursSchema and site.contact.openingHoursSchema.length > 0 %}
    "openingHoursSpecification": [
      {% for item_schema in site.contact.openingHoursSchema %}
      {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          {% for day in item_schema.dayOfWeek %}"http://schema.org/{{ day }}"{{ "," if not loop.last }}{% endfor %}
        ],
        "opens": "{{ item_schema.opens }}",
        "closes": "{{ item_schema.closes }}"
      }{{ "," if not loop.last }}
      {% endfor %}
    ],
    {% endif %}
    "hasMap": "{{ site.contact.mapEmbedUrl }}",
    "potentialAction": {
      "@type": "ReserveAction",
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": "{{ site.url }}/contact/",
        "actionPlatform": "http://schema.org/DesktopWebPlatform"
      },
      "name": "Termin buchen"
    },
    "sameAs": [
      {% if site.googleBusinessProfileURL %}"{{ site.googleBusinessProfileURL }}"{% if site.social.length > 0 %},{% endif %}{% endif %}
      {% for socialLink in site.social %}{% if socialLink.url and socialLink.url != "#" %}"{{ socialLink.url }}"{{ "," if not loop.last }}{% endif %}{% endfor %}
    ]
  }
  </script>
</section>
