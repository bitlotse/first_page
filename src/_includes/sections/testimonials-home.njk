    "@graph": [
      {
        "@type": "Review",
        "itemReviewed": {
          "@type": "{{ site.contact.schemaType | default('Organization') }}",
          "name": "{{ site.name }}",
          "url": "{{ site.url }}"
        },
        "reviewBody": "Endlich habe ich meinen Traumfriseur gefunden! Die Haarmanufaktur Suszan hat mir einen wunderschönen Balayage-Look verpasst. Das Team ist super freundlich und nimmt sich wirklich Zeit für jeden Kunden.",
