          "bestRating": "5"
        }
      },
      {
        "@type": "Review",
        "itemReviewed": {
          "@type": "{{ site.contact.schemaType | default('Organization') }}",
          "name": "{{ site.name }}",
          "url": "{{ site.url }}"
        },
        "reviewBody": "Seit Jahren bin ich Stammkunde bei der Haarmanufaktur Suszan. Die Qualität ist immer erstklassig und die Beratung ist persönlich und kompetent. Mein Herrenhaarschnitt ist immer perfekt!",
